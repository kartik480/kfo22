<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="8dp" />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E74C3C" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#E74C3C"
                android:startColor="#C0392B"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list> 