<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="12dp" />
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    
    <!-- Background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8E44AD" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#8E44AD"
                android:startColor="#6C3483"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list> 