<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <View
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_back"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Employee Links"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:fontFamily="sans-serif-medium" />

        <View
            android:id="@+id/refreshButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_refresh"
            android:layout_marginEnd="16dp" />

        <View
            android:id="@+id/addButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_add" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <!-- Employee Links Section Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#3498DB"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Employee Links Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Employee Links Boxes - KfinOne Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Emp Manage Icons Box -->
                <LinearLayout
                    android:id="@+id/empManageIconsBox"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E8F5E8"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_settings"
                            android:tint="#388E3C" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emp Manage Icons"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/empManageIconsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage Icons"
                            android:textSize="16sp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage employee icons and settings"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#BDC3C7" />

                </LinearLayout>

                <!-- Emp Data Icons Box -->
                <LinearLayout
                    android:id="@+id/empDataIconsBox"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E3F2FD"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_data"
                            android:tint="#1976D2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emp Data Icons"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/empDataIconsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Icons"
                            android:textSize="16sp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage employee data and information"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#BDC3C7" />

                </LinearLayout>

                <!-- Emp Work Icons Box -->
                <LinearLayout
                    android:id="@+id/empWorkIconsBox"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#FFF3E0"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_work"
                            android:tint="#F57C00" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emp Work Icons"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/empWorkIconsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work Icons"
                            android:textSize="16sp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage employee work and tasks"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#BDC3C7" />

                </LinearLayout>

            </LinearLayout>

            <!-- Employee Links Boxes - Managing Director Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- My Emp Links Box -->
                <LinearLayout
                    android:id="@+id/myEmpLinksBox"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E8F5E8"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_person"
                            android:tint="#388E3C" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Emp Links"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/myEmpLinksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Employee Links"
                            android:textSize="16sp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View my employee permissions and icons"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#BDC3C7" />

                </LinearLayout>

                <!-- Team Emp Links Box -->
                <LinearLayout
                    android:id="@+id/teamEmpLinksBox"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="20dp"
                    android:elevation="3dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#E3F2FD"
                        android:gravity="center"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_people"
                            android:tint="#1976D2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team Emp Links"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#2C3E50"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/teamEmpLinksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team Employee Links"
                            android:textSize="16sp"
                            android:textColor="#7F8C8D"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage team employee permissions and icons"
                            android:textSize="12sp"
                            android:textColor="#95A5A6"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="#BDC3C7" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:id="@+id/dashboardButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                android:tint="#3498DB" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="10sp"
                android:textColor="#3498DB"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/empLinksButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_link"
                android:tint="#2C3E50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emp Links"
                android:textSize="10sp"
                android:textColor="#2C3E50"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/reportsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reports"
                android:tint="#7F8C8D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="10sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:tint="#7F8C8D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="10sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 