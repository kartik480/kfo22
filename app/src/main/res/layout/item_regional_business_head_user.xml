<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:id="@+id/nameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <!-- Employee ID -->
            <TextView
                android:id="@+id/employeeIdText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employee ID: EMP001"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <!-- Company -->
            <TextView
                android:id="@+id/companyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company: Company Name"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <!-- State -->
            <TextView
                android:id="@+id/stateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State: State Name"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: Location Name"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <!-- Rank -->
            <TextView
                android:id="@+id/rankText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rank: Rank Value"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <!-- Phone -->
            <TextView
                android:id="@+id/phoneText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: 1234567890"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: john@example.com"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Manage Icons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- Dashboard Icon -->
            <ImageView
                android:id="@+id/dashboardIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_dashboard"
                android:background="@drawable/circle_background_light"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Dashboard"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <!-- Settings Icon -->
            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:background="@drawable/circle_background_light"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Settings"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <!-- Analytics Icon -->
            <ImageView
                android:id="@+id/analyticsIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_analytics"
                android:background="@drawable/circle_background_light"
                android:padding="6dp"
                android:contentDescription="Analytics"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 