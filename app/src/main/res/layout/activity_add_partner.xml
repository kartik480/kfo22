<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2C3E50"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- ScrollView for form content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Partner Details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter email address"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/firstNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter first name"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/lastNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter last name"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Alias Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alias Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/aliasNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter alias name"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/phoneNoInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter phone number"
                android:inputType="phone"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Alternative Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alternative Phone Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/alternativePhoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter alternative phone number"
                android:inputType="phone"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Partner Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner Type *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/partnerTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Branch State -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch State *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/branchStateSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Branch Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branch Location *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/branchLocationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Office Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/officeAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter office address"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Residential Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residential Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/residentialAddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter residential address"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Aadhaar Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhaar Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/aadhaarNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Aadhaar number"
                android:inputType="number"
                android:maxLength="12"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- PAN Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAN Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/panNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter PAN number"
                android:inputType="textCapCharacters"
                android:maxLength="10"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Account Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/accountNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter account number"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- IFSC Code -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSC Code"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/ifscCodeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter IFSC code"
                android:inputType="textCapCharacters"
                android:maxLength="11"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Bank Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/bankNameSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Account Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Type *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/accountTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- File Upload Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document Uploads"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- PAN Card Upload -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAN Card Upload"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/panCardUploadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose File"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/panCardFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="No file selected"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Aadhaar Card Upload -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhaar Card Upload"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/aadhaarCardUploadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose File"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/aadhaarCardFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="No file selected"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Photo Upload -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Upload"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/photoUploadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose File"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/photoFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="No file selected"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Bank Proof Upload -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Proof Upload"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/bankProofUploadButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Choose File"
                    android:textColor="#FFFFFF"
                    android:background="#2196F3"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/bankProofFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="No file selected"
                    android:textColor="#666666"
                    android:gravity="center_vertical"
                    android:padding="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:gravity="center">

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="12dp"
            android:minWidth="120dp" />

    </LinearLayout>

</LinearLayout> 