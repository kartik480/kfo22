<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1976D2"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- App Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agent Team"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

                    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent Team"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View and manage team members"
            android:textSize="14sp"
            android:textColor="#7F8C8D" />

        </LinearLayout>

        <!-- User Selection Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Designated User"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chief Business Officer, Regional Business Head, Director"
                android:textSize="12sp"
                android:textColor="#7F8C8D"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/userSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/showDataButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Show Data"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="#1976D2"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Reset"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="#E74C3C"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Table Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#E3F2FD"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical"
            android:elevation="1dp"
            android:layout_marginBottom="8dp">

            <!-- Agent ID Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Agent ID"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <!-- Full Name Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Full Name"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <!-- Phone Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Phone"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <!-- Email Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Email"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <!-- Created By Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Created By"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <!-- Company Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Company"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <!-- Action Column -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Action"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

        </LinearLayout>

        <!-- Team Members List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout> 