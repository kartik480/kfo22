<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Employee Name and Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50" />

            <TextView
                android:id="@+id/employeeUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/employeeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#27AE60"
            android:background="#E8F5E8"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Contact Information Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employeePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: +91 98765 43210"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/employeeEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: employee@example.com"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/employeeCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company: KfinOne"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/employeeRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank: Manager"
                android:textSize="14sp"
                android:textColor="#34495E"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Additional Details Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employeeAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address: Office Address"
            android:textSize="12sp"
            android:textColor="#95A5A6"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/employeeCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created: 2024-01-01"
            android:textSize="12sp"
            android:textColor="#95A5A6"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout> 