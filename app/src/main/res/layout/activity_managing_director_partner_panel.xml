<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="24sp"
            android:textColor="#2C3E50"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Partner Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginEnd="40dp" />

    </LinearLayout>

    <!-- Add Partner Box -->
    <LinearLayout
        android:id="@+id/addPartnerBox"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:backgroundTint="#E8F5E8"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- Icon Container -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#4CAF50"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_add"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Partner"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/addPartnerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="#666666" />

    </LinearLayout>

    <!-- My Partner Box -->
    <LinearLayout
        android:id="@+id/myPartnerBox"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:backgroundTint="#E3F2FD"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- Icon Container -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#2196F3"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_people"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Partner"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/myPartnerCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Partners"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="#666666" />

    </LinearLayout>

    <!-- Partner Team Box -->
    <LinearLayout
        android:id="@+id/partnerTeamBox"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:backgroundTint="#FFF3E0"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <!-- Icon Container -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FF9800"
            android:gravity="center"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_team"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner Team"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/partnerTeamCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Team Members"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            android:tint="#666666" />

    </LinearLayout>

</LinearLayout> 