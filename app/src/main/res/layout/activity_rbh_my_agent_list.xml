<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, RBH!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <!-- Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/action_card_background"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Agent"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/totalAgentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/action_card_background"
                    android:padding="16dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Agent"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/activeAgentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/green" />

                </LinearLayout>

            </LinearLayout>

            <!-- Agent List Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/action_card_background"
                android:padding="24dp"
                android:layout_marginTop="24dp">

                <!-- Agent List Heading -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agent List"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:gravity="center" />

                <!-- Filter Dropdowns -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <!-- Agent Type Dropdown -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agent Type"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerAgentType"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/dropdown_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Branch State Dropdown -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch State"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerBranchState"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/dropdown_background"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Branch Location Dropdown -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch Location"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerBranchLocation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/dropdown_background"
                        android:padding="12dp"
                        android:layout_marginBottom="20dp" />

                </LinearLayout>

                <!-- Filter and Reset Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnFilter"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Filter"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background_primary"
                        android:layout_marginEnd="8dp"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Reset"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background_secondary"
                        android:layout_marginStart="8dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 