<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Bankers"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="5"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Vendor Bank -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendor Bank *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/vendorBankDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"/>
                    </LinearLayout>

                    <!-- Banker Name -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Banker Name *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:startIconDrawable="@drawable/ic_person">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/bankerNameInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Banker Name *"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Phone No -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone No *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:startIconDrawable="@drawable/ic_phone">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phoneInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Phone No *"
                                android:inputType="phone"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:startIconDrawable="@drawable/ic_email">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email *"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- Banker Designation -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Banker Designation *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/bankerDesignationDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"/>
                    </LinearLayout>

                    <!-- Type Of Loan -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type Of Loan *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/typeOfLoanDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"/>
                    </LinearLayout>

                    <!-- Branch State -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Branch State *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/branchStateDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"/>
                    </LinearLayout>

                    <!-- Branch Location -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Branch Location *"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <Spinner
                            android:id="@+id/branchLocationDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"/>
                    </LinearLayout>

                    <!-- Visiting Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visiting Card"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/chooseVisitingCardButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose File"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                            <TextView
                                android:id="@+id/visitingCardFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No file chosen"
                                android:layout_marginStart="12dp"
                                android:textColor="#888888"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Address -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:startIconDrawable="@drawable/ic_location">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/addressInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </GridLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#7C5CFA"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView> 