<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Insurance"
            android:textSize="18sp"
            android:textColor="#2C3E50"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Search"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/filterButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Search and Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Search insurance policies..."
            app:boxStrokeColor="#2196F3"
            app:hintTextColor="#2196F3"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="#2196F3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Filter Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by:"
                android:textSize="14sp"
                android:textColor="#2C3E50"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/allChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/chip_background_color" />

            <com.google.android.material.chip.Chip
                android:id="@+id/activeChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/chip_background_color" />

            <com.google.android.material.chip.Chip
                android:id="@+id/expiredChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expired"
                android:layout_marginEnd="8dp"
                app:chipBackgroundColor="@color/chip_background_color" />

            <com.google.android.material.chip.Chip
                android:id="@+id/pendingChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                app:chipBackgroundColor="@color/chip_background_color" />

        </LinearLayout>

    </LinearLayout>

    <!-- Insurance List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/insuranceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_policy"
            android:tint="#BDBDBD"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Insurance Policies"
            android:textSize="18sp"
            android:textColor="#757575"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You haven't added any insurance policies yet."
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:gravity="center" />

        <Button
            android:id="@+id/addInsuranceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Insurance"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading insurance policies..."
            android:textSize="16sp"
            android:textColor="#757575" />

    </LinearLayout>

</LinearLayout> 